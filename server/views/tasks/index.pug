extends ../layouts/application.pug

block content
  h1= t('layouts.application.statuses')
  a.btn.btn-primary.mx-2(href=route('newTask'))= t('views.tasks.createNewTaskButton')
  table.table.table-striped
    thead
      tr
        th= t('views.tasks.id')
        th= t('views.tasks.name')
        th= t('views.tasks.status')
        th= t('views.tasks.creator')
        th= t('views.tasks.executor')
        th= t('views.tasks.createdAt')
        th= t('views.tasks.actions')
    tbody
      each task in tasks
        tr
          td= task.id
          td
            a(href=route('showTask', { id: task.id }))= task.name
          td= task.status.name
          td= task.creator.name
          if task.executor
            td= `${task.executor.name}`
          else
            td
          td= task.createdAt
          td
            ul.nav
              li
                a.btn.btn-primary.mx-2(href=route('editTask', { id: task.id }))= t('views.tasks.actions.edit')
              li
                +buttonTo(route('deleteTask', { id: task.id }), 'delete')(class="btn btn-danger" value=t('views.tasks.actions.delete'))