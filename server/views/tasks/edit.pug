extends ../layouts/application.pug

block header
  = t('views.tasks.editTask.title')

block content
  +formFor()(action=route('updateTask', { id: taskToEdit.id }) method='post')
    +input(taskToEdit, 'name', errors)(type="text")
    +textarea(taskToEdit, 'description', errors)(rows="5")
    +select(taskToEdit, 'statusId', errors, statuses)
    +select(taskToEdit, 'executorId', errors, usersNormalized)
    +select(taskToEdit, 'labels', errors, labels, true)
    +input(name="_method" type="hidden" value="patch")
    +submit(taskToEdit)(value=t('views.tasks.editTask.submit'))