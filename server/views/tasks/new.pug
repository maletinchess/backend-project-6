extends ../layouts/application.pug

block header
  = t('views.tasks.newTask.title')

block content
  +formFor()(action=route('createTask') method='post')
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description', errors)(rows="5")
    +select(task, 'statusId', errors, statuses)
    +select(task, 'executorId', errors, usersNormalized)
    +submit(task)(value=t('views.tasks.newTask.submit'))