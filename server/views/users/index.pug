extends ../layouts/application.pug

block content
  h1= t('layouts.application.users')
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.firstName')
        th= t('views.users.lastName')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.actions.header')
    tbody
      each user in users
        tr
          td= user.id
          td= user.firstName
          td= user.lastName
          td= user.email
          td= formatDate(user.createdAt)
          td
            button.btn.btn-primary
              a.text-dark.text-decoration-none(href=route('editUser', { id: user.id }))= t('views.users.actions.edit')
           
