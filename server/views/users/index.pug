extends ../layouts/application.pug

block content
  h1= t('layouts.application.users')
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.firstName')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.actions.header')
    tbody
      each user in users
        tr
          td= user.id
          td= `${user.firstName} ${user.lastName}`
          td= user.email
          td= formatDate(user.createdAt)
          td
            ul.nav
              li
                a.btn.btn-primary.mx-2(href=route('editUser', { id: user.id }))= t('views.statuses.actions.edit')
              li
                +buttonTo(route('deleteUser', { id: user.id }), 'delete')(class="btn btn-danger" value=t('views.statuses.actions.delete'))
            

           
